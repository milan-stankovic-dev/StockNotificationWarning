@using Microsoft.Extensions.Options
@using StockNotificationWarning.Config
@using System.Text.Json
@inject IOptionsMonitor<ShopifyConfig> ShopifyConfig

@{
    var shop = ShopifySessionStore.ShopName ?? "N/A";
    var apiKey = ShopifyConfig.CurrentValue.ApiKey;
    var host = ShopifySessionStore.Host;


    var shopJson = JsonSerializer.Serialize(shop);
    var hostJson = JsonSerializer.Serialize(host);
    var apiKeyJson = JsonSerializer.Serialize(apiKey);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            display: flex;
            height: 100vh;
            background: #f9fafb;
        }

        .sidebar {
            width: 220px;
            background: #f1f2f3;
            padding: 1rem;
            border-right: 1px solid #dfe3e8;
        }

            .sidebar h2 {
                font-size: 1.25rem;
                margin-bottom: 1rem;
            }

        .nav-link {
            display: block;
            margin: 0.5rem 0;
            color: #212b36;
            text-decoration: none;
            font-weight: 600;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .main {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    @* <div class="sidebar">
        <h2>Admin</h2>
        <a href="/Admin/Index" class="nav-link">Dashboard</a>
        <a href="/Admin/Products?shop=@shop" class="nav-link">Products (All)</a>
        <a href="/Admin/Products?Understocked=true&shop=@shop" class="nav-link">Products (Understocked)</a>
    </div> *@

    <div class="main">
        @RenderBody()
    </div>

    <script src="https://cdn.shopify.com/shopifycloud/app-bridge.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const AppBridge = window["app-bridge"];
            if (!AppBridge) {
                console.error("Shopify App Bridge failed to load");
                return;
            }
            const createApp = AppBridge.default;

            const shop = @Html.Raw(shopJson);
            const host = @Html.Raw(hostJson);
            const apiKey = @Html.Raw(apiKeyJson);

            if (window.top === window.self || !host) {
                window.top.location.href = `/index`;
                return;
            }

            const app = createApp({
                apiKey: apiKey,
                host: host,
                shopOrigin: shop,
                forceRedirect: true
            });

            const { TitleBar } = AppBridge.actions;
            TitleBar.create(app, { title: document.title });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
