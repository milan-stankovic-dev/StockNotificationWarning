@using Microsoft.Extensions.Options
@using StockNotificationWarning.Config
@using System.Text.Json
@inject IOptionsMonitor<ShopifyConfig> ShopifyConfig

@{
    var shop = ShopifySessionStore.ShopName ?? "N/A";
    var apiKey = ShopifyConfig.CurrentValue.ApiKey;
    var host = ShopifySessionStore.Host;

    var shopJson = JsonSerializer.Serialize(shop);
    var hostJson = JsonSerializer.Serialize(host);
    var apiKeyJson = JsonSerializer.Serialize(apiKey);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            display: flex;
            height: 100vh;
            background: #f9fafb;
        }

        
        .main {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    @* Sidebar is commented out *@

    <div class="main">
        @RenderBody()
    </div>

    <script id="appbridge-script" src="https://cdn.shopify.com/shopifycloud/app-bridge.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        document.getElementById('appbridge-script').addEventListener('load', function () {
            const AppBridge = window["app-bridge"];
            if (!AppBridge) {
                console.error("Shopify App Bridge failed to load");
                return;
            }
            const createApp = AppBridge.default;

            const shop = @Html.Raw(shopJson);
            const host = @Html.Raw(hostJson);
            const apiKey = @Html.Raw(apiKeyJson);

            if (window.top === window.self || !host) {
                window.top.location.href = `/index`;
                return;
            }

            console.log("shop:", shop);
            console.log("host:", host);
            console.log("apiKey:", apiKey);

            const app = createApp({
                apiKey: apiKey,
                host: host,
                shopOrigin: shop,
                shop: shop,
                forceRedirect: true
            });

            const { TitleBar } = AppBridge.actions;
            TitleBar.create(app, { title: document.title });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
