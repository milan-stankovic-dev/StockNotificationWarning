@using Microsoft.Extensions.Options
@using StockNotificationWarning.Config
@using System.Text.Json
@using StockNotificationWarning.Services.Abstraction
@inject IOptionsMonitor<ShopifyConfig> CredentialStore
@inject IShopifyCredentialStore ShopifyContext
@inject IToastNotificationService ToastService
@inject IInventoryMonitorService MonitorService

@{
    var apiKey = CredentialStore.CurrentValue.ApiKey;
    await MonitorService.NotifyToastServiceOfUnderstocked();
    var inventoryWarnings = ToastService.GetAllToasts();
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="~/js/toasts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<body data-api-key="@apiKey">
    <div id="app-content" style="display:none">
        @RenderBody()
    </div>

    <script type="module">
        import { initApp, getSessionToken } from '/js/app-bridge-bundle.js';

        (async () => {
            const apiKey = document.body.dataset.apiKey;
            const params = new URLSearchParams(window.location.search);
            const host = params.get('host');

            if (!host) {
                console.error("🚨 Missing host/shop parameter — app cannot initialize");
                document.getElementById('app-content').style.display = 'block';
                return;
            }

            const app = await initApp(apiKey, host);
            window.app = app;

            if (window.top === window.self) {
                const correctUrl = `https://admin.shopify.com/store/${shop.replace('.myshopify.com','')}/apps/stock-notification-warning/Admin/Products?host=${encodeURIComponent(host)}&shop=${encodeURIComponent(shop)}`;
                window.location.replace(correctUrl);
                return;
            }

            document.getElementById('app-content').style.display = 'block';

            async function fetchUnderstocked() {
                try {
                    const sessionToken = await getSessionToken(app);

                    const resp = await fetch('/api/toastwarning', {
                        method: 'GET',
                        headers: {
                            'Authorization': 'Bearer ' + sessionToken,
                            'Accept': 'application/json'
                        }
                    });

                    if (resp.ok) {
                        const warnings = await resp.json();
                        warnings.forEach(w => Toast.failure(w));
                    } else {
                        console.error("❌ Fetch failed:", resp.status);
                    }
                } catch(e) {
                    console.error("🔥 Error fetching understocked:", e);
                }
            }

            await fetchUnderstocked();
            setInterval(fetchUnderstocked, 30000);

        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
