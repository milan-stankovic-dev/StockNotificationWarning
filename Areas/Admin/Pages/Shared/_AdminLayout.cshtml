@using Microsoft.Extensions.Options
@using StockNotificationWarning.Config
@inject IOptionsMonitor<ShopifyConfig> ShopifyConfig

@{
    var shop = ShopifySessionStore.ShopName ?? "N/A";
    var apiKey = ShopifyConfig.CurrentValue.ApiKey;
    var host = ShopifySessionStore.Host;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Toastify CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            display: flex;
            height: 100vh;
            background: #f9fafb;
        }

        .sidebar {
            width: 220px;
            background: #f1f2f3;
            padding: 1rem;
            border-right: 1px solid #dfe3e8;
        }

            .sidebar h2 {
                font-size: 1.25rem;
                margin-bottom: 1rem;
            }

        .nav-link {
            display: block;
            margin: 0.5rem 0;
            color: #212b36;
            text-decoration: none;
            font-weight: 600;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .main {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin</h2>
        <a href="/Admin/Index" class="nav-link">Dashboard</a>
        <a href="/Admin/Products?shop=@shop" class="nav-link">Products (All)</a>
        <a href="/Admin/Products?Understocked=true&shop=@shop" class="nav-link">Products (Understocked)</a>
    </div>

    <!-- Main content -->
    <div class="main">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.shopify.com/shopifycloud/app-bridge.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const AppBridge = window["app-bridge"];
            const createApp = AppBridge.default;
            // const host = new URLSearchParams(location.search).get("host");

            if(window.top === window.self || !host) {
                const shop = @shop;
                window.location.href = `/auth/init?shop=${shop}`;
                return;
            }

            const app = createApp({
                apiKey: "@apiKey",
                shopOrigin: "@shop",
                host: "@host",
                forceRedirect: true
            });

            const { TitleBar } = AppBridge.actions;

            TitleBar.create(app, { title: document.title });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>